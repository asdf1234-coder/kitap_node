                        <p class="card-text text-center mb-0 px-1 card-tur"><%= kitap.tur %></p>
                    </div>
                    <a href="/kitap/<%= kitap.id %>"><img src="../img/<%= kitap.resim %>" class="card-img-top mb-0 img-thumbnail" alt="kitap"></a>
